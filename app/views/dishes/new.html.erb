<div id="new">
  <% form_for(@diches) do |f| %>
    <%= f.error_messages %>
    <fieldset>
      <legend>Enter Dish Details</legend>
      <p>
      </p>
      <p>
        <%= f.label :name %>:
        <%= f.text_field :name, :size => 40 %>
      </p>

      <p>
        <%= f.label :description %>:
        <%= f.text_area :description%>
      </p>

      <p>
        <%= f.label :price %>:
        <%= f.text_field :price, :size => 40 %>
      </p>
      <p>
        <%= f.label :Image %>:
        <%= f.text_field :image%>
      </p>
      <%= f.label :menu %>:
      <%= collection_select(:dish, :category_id,Category.all, :id, :name) %>

      <p>
       <%= f.submit "Add Dish" , :class => "submit" %>
      </p>
    </fieldset>
  <% end %>
</div>

