<div id="restaurant-list">
<table>
  <td class="list-name">
    <dl>
      <dt><%=h  @restaurants.name %>'s menus</dt>
        </dl>
  </td>
</table>
<% if @menus!=nil%>
  <table>
  <% for menu in @menus %>
    <% if menu.restaurant_id == @restaurants.id%>
       <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
        <td class="list-description">
          <dl>
            <dt><%=h menu.name %></dt>
          </dl>
        </td>
        <td class="list-actions">
          <%= link_to 'Show', restaurant_menu_path(@restaurants, menu)  %><br/>
           <% if current_user.id== @restaurants.user_id %>
           <%= link_to 'Add Category',new_menu_menucategory_path(menu)  %><br/>
          <%= link_to 'Edit', edit_restaurant_menu_path(@restaurants,menu) %><br/>
          <%= link_to 'Destroy', menu,
                      :confirm => 'Are you sure?',
                      :method => :delete %>
       <% end %>
     </td>
      </tr>
    <%end%>
  <% end %>
  </table>
<% else %>
<% end%>
<br />
<%= link_to 'Back', restaurants_path %> 

</div>